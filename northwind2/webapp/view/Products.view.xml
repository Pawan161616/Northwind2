<mvc:View
    controllerName="northwind.northwind2.controller.Products"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <!-- <Shell id="shell"> -->
        <!-- <App id="app"> -->
            <!-- <pages> -->
                <Page id="page" title="{i18n>title}">
                    <content>
                    <Toolbar>
                    <ToolbarSpacer/>
                      
                       <SearchField id="searchId" placeholder="SEARCH..." liveChange ="onSearch"/>
                    </Toolbar>
                         <List id="listId"
                        items="{path:'/Products',
                                sorter:{path:'ProductName',
                                  descending:false},
                                 parameters:{'expand':'Category'} 
                                 }"
                               growing="true"
                               growingThreshold = "6"  
                               growingScrollToLoad="false">
                        <ObjectListItem
                            id = "ListItemID"
                            type = "Navigation"
                            title="{ProductName}"
                            press="onListItemPress"
                            number="{UnitPrice}"
                            intro ="{Category/CategoryName}">   
                            <secondStatus>
                            <ObjectStatus text="Product Id: {ProductID}"/>
                            </secondStatus>
                        </ObjectListItem>
	                   </List>
                    </content>
                </Page>
            <!-- </pages> -->
        <!-- </App> -->
    <!-- </Shell> -->
</mvc:View>
